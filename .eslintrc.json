{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "next/core-web-vitals, eslint:recommended, plugin:prettier/recommended",
  "globals": {
    "React": "readonly"
  },
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "trailingComma": "es5",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": true,
        "proseWrap": "always",
        "arrowParens": "avoid",
        "printWidth": 80,
        "endOfLine": "lf"
      }
    ],
    "no-unused-vars": "warn",
    "no-const-assign": "error",
    "no-empty": "warn",
    "no-mixed-spaces-and-tabs": "warn"
  }
}
